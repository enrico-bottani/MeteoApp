<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:iconifiedByDefault="false"
        android:showAsAction="always"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.appyvet.materialrangebar.RangeBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:mrb_connectingLineColor="#87CEEB"
        app:mrb_pinColor="#87B4EB"
        app:mrb_pinMaxFont="12sp"
        app:mrb_pinMinFont="12sp"
        app:mrb_pinRadius="14dp"

        app:mrb_pinTextColor="#FFF"
        app:mrb_rangeBar="true"
        app:mrb_rangeBarColor="#ccc"

        app:mrb_rangeBarPaddingBottom="30dp"
        app:mrb_rangeBar_rounded="true"
        app:mrb_selectorBoundaryColor="#87B4EB"

        app:mrb_selectorColor="#87CEEB"
        app:mrb_selectorSize="12dp"
        app:mrb_temporaryPins="true"
        app:mrb_tickColor="#ccc"

        app:mrb_tickDefaultLabel="label"
        app:mrb_tickEnd="70"
        app:mrb_tickHeight="4dp"
        app:mrb_tickInterval="10"
        app:mrb_tickLabelSize="4sp"
        app:mrb_tickStart="-70" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Notify out of range temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_location" />

</android.support.constraint.ConstraintLayout>